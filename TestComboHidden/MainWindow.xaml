<Window x:Class="TestComboHidden.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TestComboHidden"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow" Width="800" Height="250"
        mc:Ignorable="d">
    <Window.DataContext>
        <local:MainWindowViewModel />

    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:ClampRecord}">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding Index}" />
                <TextBlock Text="-" />
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <DockPanel>
        <ListBox ItemsSource="{Binding ClampRecords}" />
        <StackPanel>
            <Button Command="{Binding AddClampCmd}" Content="Add" />
            <Button Command="{Binding RemoveClampCmd}" Content="Remove" />
            <ComboBox ItemsSource="{Binding ClampRecords}" Visibility="{Binding ShowComboBox}" />
        </StackPanel>

    </DockPanel>
</Window>
